{% block image_widget %}
{% spaceless %}
    {% if expanded %}
        <ul {{ block('widget_container_attributes') }}>
            {% for child in form %}
            {% set images = child.parent.vars.images[loop.index0] %}
            <label for="{{child.vars.id}}" class="col l4 m6 s12" style="vertical-align: bottom; display: inline-block; float: none;">
                <div class="image-bibliotheque">
                    <img src="{{ asset(images.url)}}" alt="{{images.alt}}">
                </div>
                <div class="input">
                    {{ form_widget(child) }}
                    {{ form_label(child) }}
                </div>
            </label>

            {% endfor %}
        </ul>
    {% else %}
        {# just let the choice widget render the select tag #}
        {{ block('choice_widget') }}
    {% endif %}
{% endspaceless %}
{% endblock %}
