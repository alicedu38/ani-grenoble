<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css" integrity="sha384-2hfp1SzUoho7/TsGGGDaFdsuuDL0LX2hnUp6VkX3CUQ2K4K+xjboZdsXyp4oUHZj" crossorigin="anonymous">         
            <!--Import Google Icon Font-->
            <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <!-- Compiled and minified CSS -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
            <!--Import jQuery before materialize.js-->
            <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
            <!-- Compiled and minified JavaScript -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>

        {% endblock %}
        {% stylesheets 'css/custom.css' %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        
    </head>
    <body>
        <div class="container">
            <nav>
                <div class="nav-wrapper">
                    <a class="brand-logo" href="{{ path('ani_grenoble_app_homepage') }}"><img src="{{ asset('image/ani-grenoble.jpg') }}"></a>
                    <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>

                    <ul class="right hide-on-med-and-down">                      
                        <li>
                            <a class="nav-link" href="{{ path('ani_grenoble_app_a_propos') }}">A propos</a>
                        </li>
                        <!-- On n'affiche le lien qu'au utilisateur abilités -->
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}                            
                            <li>
                                <a class="nav-link" href="{{ path('fos_user_security_logout') }}">Deconnexion</a>
                            </li>
                        {% else %}
                            <li>
                                <a class="nav-link" href="{{ path('fos_user_security_login') }}">Connexion</a>
                            </li>
                        {% endif %}                       
                    </ul>
                    <ul class="side-nav" id="mobile-demo">
                        <!-- On n'affiche le lien qu'au utilisateur abilités -->
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}                         
                            <li>
                                <a class="nav-link" href="{{ path('fos_user_security_logout') }}">Deconnexion</a>
                            </li>
                        {% else %}
                            <li>
                                <a class="nav-link" href="{{ path('fos_user_security_login') }}">Connexion</a>
                            </li>
                        {% endif %}                         
                    </ul>                        
                </div>
            </nav>

            <div class="card-panel pink lighten-5">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <p class="">Bonjour {{ app.user.username }}.                    
                {% endif %}
                {% if is_granted('ROLE_SUPER_ADMIN') %}                   
                    <a class="nav-link" href="{{ path('fos_user_registration_register') }}">Ajouter un utilisateur<span class="sr-only">(current)</span></a> |
                {% endif %}
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}                    
                    <a class="nav-link" href="{{ path('ani_grenoble_app_annonce_add') }}">Ajouter un article<span class="sr-only">(current)</span></a> |
                    <a class="nav-link" href="{{ path('fos_user_change_password') }}">Change mot de passe</a>
                    </p>
                    
                {% endif %} 
            </div>

            {% block body %}
            {% endblock %}

            <hr>

            <footer>
                <p>Copyright © {{ 'now'|date('Y') }}. Tous droits réservés</p>
            </footer>
        </div>
        {% block javascripts %}
        {% endblock %}
    </body>
    <script type="text/javascript">
        $( document ).ready(function(){
            $(".button-collapse").sideNav(); 
        })
    </script>
    <script type="text/javascript">
        if ($(".form")[0]){  
            $('input.date-date').removeAttr("type");
            $('input.date-date').prop('type', 'date');
            $(".label_publie").before($(".checkbox_publie"));
        }
    </script>
</html>