<h3>Formulaire d'annonce</h3>

<div class="form">
	{{ form_start(form) }}

    {# Les erreurs générales du formulaire. #}
    {% if form_errors(form) or form_errors(form.titre) or form_errors(form.contenu) or form_errors(form.date) or form_errors(form.auteur)%}
    {#{% if form_errors(form) or form_errors(form.titre) or form_errors(form.contenu) or form_errors(form.date) or form_errors(form.auteur) or form_errors(form.image.url) %}#}
	    <div class="alert alert-danger">
		    {{ form_errors(form) }}
		    {{ form_errors(form.titre) }}
		    {{ form_errors(form.contenu) }}
		    {{ form_errors(form.date) }}
		    {{ form_errors(form.auteur) }}
		    {#{{ form_errors(form.image.url) }} #}
		</div>
	{% endif %}

    <div class="row">
		{# Génération du label. #}
		{{ form_label(form.titre, "Titre de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		<div class="col-sm-9">
			{# Génération de l'input. #}
			{{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
		</div>
    </div>

    {# Idem pour un autre champ. #}
    <div class="row">
		{{ form_label(form.contenu, "Contenu de l'article", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		<div class="col-sm-9">
			{{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
		</div>
    </div>

  	{# Génération du label + error + widget pour un champ #}
  	<div class="row">
		{{ form_label(form.date, "Date", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		<div class="col-sm-9">
			{{ form_widget(form.date, {'attr': {'class': 'form-control date-date'}}) }}
		</div>
    </div>

    <div class="row">
		{{ form_label(form.auteur, "Auteur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		<div class="col-sm-9">
			{{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
		</div>
    </div>

    <div class="row">
		{{ form_label(form.publie, "Etat Publie ?", {'label_attr': {'class': 'col-sm-3 control-label label_publie'}}) }}
		

		
		{{ form_widget(form.publie, {'attr': {'class': 'form-control checkbox_publie'}}) }}
		
    </div>

    <div class="row">
		{{ form_label(form.image.url, "Image URL", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		<div class="col-sm-9">
			{{ form_widget(form.image.url, {'attr': {'class': 'form-control'}}) }}
		</div>

		{{ form_label(form.image.alt, "Image alt", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	
		<div class="col-sm-9">
			{{ form_widget(form.image.alt, {'attr': {'class': 'form-control'}}) }}
		</div>

		{{ form_label(form.image.file, "Image fichier", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	
		<div class="col-sm-9">
			{{ form_widget(form.image.file, {'attr': {'class': 'form-control'}}) }}
		</div>
    </div>

    <div class="row">
		{{ form_label(form.categories, "Categories", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		<div class="col-sm-9">
			{{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}
		</div>
    </div>

  	{# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  	{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

  	{# Génération automatique des champs pas encore écrits.
     	Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     	et tous les champs cachés (type « hidden »). #}
  	{{ form_rest(form) }}
  
  	{# Fermeture de la balise <form> du formulaire HTML #}
  	{{ form_end(form) }}
</div>